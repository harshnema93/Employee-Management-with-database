<div class='flex-shrink-0 h-full w-[300px] bg-red-400 rounded-xl'>
    <div class='flex justify-between'>
      <h3 class='bg-red-600 text-sm px-3 py-1 rounded'><%= locals.data.category %></h3>
      <h4 class='text-sm'><%= locals.data.taskDate %></h4>
    </div>
    <h2 class='mt-5 text-2xl font-semibold'><%= locals.data.taskTitle %></h2>
    <p class='text-sm mt-2'><%= locals.data.taskDescription %></p>
    <div class='flex justify-between mt-4'>
      <a
       href="/api/employees/complete-task/<%=data.id%>?employeeId=<%=data.employeeId%>"
        class='bg-green-500 py-1 px-2 text-sm'>
        Mark as Completed
      </a>
     <a
          href="/api/employees/fail-task/<%=data.id%>?employeeId=<%=data.employeeId%>"
       class='bg-red-500 py-1 px-2 text-sm'>
       Mark as Failed
     </a>
   </div>
 </div>