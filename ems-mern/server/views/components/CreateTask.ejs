<div class="bg-gray-100 p-6 rounded-lg shadow-lg max-w-lg mx-auto mt-10">
    <h2 class="text-2xl font-bold text-gray-700 mb-4">Create New Task</h2>
      <form action="/api/employees/tasks" method="POST" class="space-y-4" id="createTaskForm">
          <div>
              <label class="block text-gray-600 mb-2">Employee ID:</label>
              <select
                      name="employeeId"
                     class="w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"
                      >
                      <% if (locals.userData && locals.userData.length > 0) { %>
                          <% userData.forEach(employee => { %>
                              <option value="<%= employee.id %>"><%= employee.firstName %></option>
                         <% }); %>
                      <% } %>
            </select>
        </div>

        <div>
            <label class="block text-gray-600 mb-2">Task Title:</label>
            <input
                type="text"
               name="taskTitle"
                class="w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"
                placeholder="Enter Task Title"
            />
        </div>

        <div>
            <label class="block text-gray-600 mb-2">Task Description:</label>
            <textarea
              name="taskDescription"
                class="w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"
                placeholder="Enter Task Description"
                rows="4"
            ></textarea>
        </div>

        <div>
            <label class="block text-gray-600 mb-2">Task Date:</label>
            <input
                type="date"
                name="taskDate"
                class="w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"
            />
        </div>

        <div>
            <label class="block text-gray-600 mb-2">Category:</label>
            <input
                type="text"
                name = "category"
                class="w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"
                placeholder="Enter Task Category"
            />
        </div>

        <button
            type="submit"
            class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition"
        >
            Create Task
        </button>
    </form>
</div>